<div style="width: 680px;margin:0 auto;text-align: left;">
    <p style="line-height: 60px;text-align: center;font-size: 18px;font-weight: bold;color:gray;margin-bottom:50px;">专&nbsp;项&nbsp;行&nbsp;动&nbsp;</p>

    <form class="ui-form ui-form-large" id="specific-form">
        <fieldset>
            <legend>标题</legend>
            <div class="ui-form-item">
                <label class="ui-label">
                    <span class="ui-form-required">*</span>&nbsp;行&nbsp;动&nbsp;名&nbsp;称
                </label>
                <input class="ui-input" type="text" name="activityName" style="width:270px"
                       ms-duplex="obj.activityName">

                <p for="activityName" class="ui-form-explain input-error " style="text-align: left;display: none"></p>
            </div>
            <div class="ui-form-item">
                <label class="ui-label">
                    <span class="ui-form-required">*</span>&nbsp;状&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;态
                </label>
                <div style="padding-top: 12px;">
                    <input type="radio" name="status" ms-duplex-string="obj.status" value="N">&nbsp;开启行动&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="radio" name="status" ms-duplex-string="obj.status" value="C">&nbsp;结束行动
                </div>
            </div>
            <div class="ui-form-item" style="text-align: left;">
                <input type="button" class="ui-button ui-button-lblue" value="确&nbsp;&nbsp;&nbsp;定" ms-click="save()">
                <input type="button" class="ui-button ui-button-lwhite" value="返&nbsp;&nbsp;&nbsp;回" ms-click="back()">
            </div>
        </fieldset>
    </form>
</div>
